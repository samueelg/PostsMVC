// prisma/schema.prisma

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Arquivo de configuração principal do Prisma que define o schema do banco de dados
// e as configurações do cliente Prisma

// Define como o Prisma Client será gerado
generator client {
    // Especifica que queremos gerar o cliente JavaScript/TypeScript do Prisma
    provider = "prisma-client-js"
    // Define onde o código gerado do cliente será salvo
    output   = "../src/generated/prisma"
}

// Configura a conexão com o banco de dados
datasource db {
    // Define que vamos usar SQLite como banco de dados
    provider = "sqlite"
    // Define a URL de conexão com o banco, usando uma variável de ambiente
    url      = "file:../database.sqlite"
}

model User {
    id    Int    @id @default(autoincrement())
    nome  String
    posts Post[]
}

model Post {
    id        Int      @id @default(autoincrement())
    titulo     String
    conteudo   String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    // campos de relacionamento
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
}
